{
  "brand_id": "akai-professional",
  "base_url": "https://www.akaipro.com/products",
  "product_list_selector": ".product-grid, .products",
  "product_item_selector": ".product-card, .product-item, article.product",
  "pagination": {
    "type": "scroll",
    "next_button_selector": ".load-more"
  },
  "fields": {
    "name": {
      "selector": ".product-name, h2, h3",
      "attribute": "text"
    },
    "image_url": {
      "selector": "img.product-image, img",
      "attribute": "src"
    },
    "detail_url": {
      "selector": "a.product-link, a",
      "attribute": "href"
    },
    "price": {
      "selector": ".price, [data-price]",
      "attribute": "text"
    },
    "category": {
      "selector": ".category, .product-category",
      "attribute": "text"
    }
  }
}