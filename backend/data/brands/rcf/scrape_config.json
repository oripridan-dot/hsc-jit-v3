{
  "brand_id": "rcf",
  "base_url": "https://www.rcf.it/en_US/products",
  "product_list_selector": ".product-grid, .products-list",
  "product_item_selector": "div.product-card, .product-item",
  "pagination": {
    "type": "button",
    "next_button_selector": ".load-more, .next"
  },
  "fields": {
    "name": {
      "selector": ".product-name, h2, h3",
      "attribute": "text"
    },
    "image_url": {
      "selector": "img",
      "attribute": "src"
    },
    "detail_url": {
      "selector": "a",
      "attribute": "href"
    },
    "price": {
      "selector": ".price",
      "attribute": "text"
    },
    "category": {
      "selector": ".category",
      "attribute": "text"
    }
  }
}