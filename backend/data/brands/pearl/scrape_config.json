{
  "brand_id": "pearl",
  "base_url": "https://www.pearldrums.com/drums",
  "product_list_selector": ".product-grid, .drums-list",
  "product_item_selector": ".product-card, .product, article",
  "pagination": {
    "type": "button",
    "next_button_selector": ".load-more, .next"
  },
  "fields": {
    "name": {
      "selector": ".product-name, h2",
      "attribute": "text"
    },
    "image_url": {
      "selector": "img.product-image, img",
      "attribute": "src"
    },
    "detail_url": {
      "selector": "a.product-link, a",
      "attribute": "href"
    },
    "price": {
      "selector": ".price",
      "attribute": "text"
    },
    "category": {
      "selector": ".category",
      "attribute": "text"
    }
  }
}