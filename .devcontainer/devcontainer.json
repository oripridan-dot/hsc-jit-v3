{
  "name": "HSC JIT v3.4 - Autonomous Core",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "tamasfe.even-better-toml",
        "humao.rest-client",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "files.eol": "\n"
      }
    }
  },
  "postCreateCommand": "sudo apt-get update -qq && sudo apt-get install -y -qq redis-server lsof && sudo npm install -g pnpm && pip install -r backend/requirements.txt",
  "postStartCommand": "sudo service redis-server start && bash /workspaces/hsc-jit-v3/start.sh",
  "remoteUser": "vscode",
  "forwardPorts": [8000, 5173, 6379, 9090, 3000],
  "portsAttributes": {
    "8000": {
      "label": "Backend API",
      "onAutoForward": "notify",
      "visibility": "public",
      "protocol": "http"
    },
    "5173": {
      "label": "Frontend Dev",
      "onAutoForward": "notify",
      "visibility": "public",
      "protocol": "http"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "ignore",
      "visibility": "private"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "ignore",
      "visibility": "private"
    },
    "3000": {
      "label": "Grafana",
      "onAutoForward": "ignore",
      "visibility": "private"
    }
  }
}
