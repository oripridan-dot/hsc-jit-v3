{
  "name": "frontend",
  "private": true,
  "version": "3.8.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "quality": "npm run quality:types && npm run quality:lint && npm run quality:build",
    "quality:types": "tsc --noEmit",
    "quality:lint": "eslint src --max-warnings 0",
    "quality:build": "vite build",
    "quality:deps": "depcheck --ignores='@types/*,vite,vitest,@vitejs/*,eslint*,typescript,tailwindcss,postcss,autoprefixer,playwright'",
    "quality:size": "npm run build && du -sh dist && ls -lh dist/assets/*.js dist/assets/*.css 2>/dev/null || echo 'No assets yet'",
    "clean:logs": "find src -name '*.ts*' ! -name 'devTools.ts' -exec grep -l 'console\\.log' {} \\;",
    "clean:todos": "find src -name '*.ts*' -exec grep -Hn 'TODO\\|FIXME' {} \\;",
    "verify": "npm run quality && npm run test:run && echo 'âœ… All verifications passed!'",
    "daily": "npm run verify && npm run quality:size"
  },
  "dependencies": {
    "framer-motion": "^12.25.0",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^4.0.11",
    "zod": "^3.23.8",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.23",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^1.0.4"
  }
}
